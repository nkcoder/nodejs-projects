{
  "name": "message-board",
  "version": "1.0.0",
  "description": "A message board where users can create boards and post messages to them.",
  "scripts": {
    "build": "tsc",
    "deploy": "sls deploy",
    "dev": "sls dev",
    "offline": "sls offline --stage local",
    "prune": "sls prune",
    "remove": "sls remove",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "test_ui": "vitest --ui",
    "test_coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.585.0",
    "@aws-sdk/client-sns": "^3.846.0",
    "@aws-sdk/client-sqs": "^3.846.0",
    "@aws-sdk/lib-dynamodb": "^3.585.0",
    "@types/aws-lambda": "^8.10.150",
    "aws-lambda": "^1.0.7",
    "express": "^4.19.2",
    "serverless-http": "^3.2.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "serverless-offline": "^14.4.0",
    "serverless-prune-plugin": "^2.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
